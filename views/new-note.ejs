</head>
<body>
    <%- include('./includes/nav.ejs') %>
    <main>
        <H1>New Note</H1>
        <form action="<% if(editing){%>/edit-note<%} else {%>/edit-note<%}%>" method="post">
            <div>
                <label for="title">Title:</label>
                <input type="text" name="title" id="title" value="<% if(editing){%><%=note.title%><%}%>" required>
            </div>
            <div>
                <label for="note">Note:</label>
                <textarea name="note" id="note" cols="50" rows="10" placeholder="input your note" required><% if(editing){%><%=note.note%><%}%></textarea>
            </div>
            <% if (editing) {%>
                <input type="hidden" value="<%=note.id%>" name="noteId">
                <%}%>
            <button type="submit"><% if(editing){%>Edit Note<%} else {%>Add Note<%}%></button>
        </form>
    </main>
